@model AdrasJRS.Data.ViewModel.LoginViewModel

@{
    Layout = "~/Areas/Employer/Views/Shared/_EmployerLoginLayout.cshtml";
}

<!-- /Logo -->
<h4 class="mb-2">@Localizer["login_for_employer"]</h4>
<p class="mb-4">@Localizer["please_sign_in_to_your_account_and_start_the_adventure"]</p>

<form asp-action="Login" asp-controller="Account" id="account" class="mb-3" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label">@Localizer["email"]</label><span class="text-danger">*</span>
        <input asp-for="Email"
               type="text"
               class="form-control"
               autocomplete="username"
               aria-required="true"
               placeholder="Enter your email"
               autofocus />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3 form-password-toggle">
        <label asp-for="Password" class="form-label">@Localizer["password"]</label><span class="text-danger">*</span>
        <div class="input-group input-group-merge">
            <input asp-for="Password"
                   type="password"
                   class="form-control"
                   autocomplete="new-password"
                   placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                   aria-required="true" />
            <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
        </div>
    </div>
    <div class="mb-3">
        <button id="login-submit" class="btn btn-primary d-grid w-100" type="submit">@Localizer["sign_in"]</button>
    </div>
</form>

<p class="text-center">
    <span>@Localizer["want_to_be_an_employer"]</span>
    <a href="/addrass_job_system/register-employer/register">
        <span>@Localizer["sign_up_now"]</span>
    </a>
</p>

<a href="/addrass_job_system/login" class="btn btn-primary d-grid w-100" style="position:center">@Localizer["sign_in_for_user"]</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}