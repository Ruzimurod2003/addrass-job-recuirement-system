<!DOCTYPE html>

<!-- beautify ignore:start -->
<html lang="en"
      class="light-style layout-menu-fixed"
      dir="ltr"
      data-theme="theme-default"
      data-template="vertical-menu-template-free">
<head>
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />

    <title>@Localizer["project_title"]</title>

    <meta name="description" content="" />

    <!-- Favicon -->
    <link rel="icon" href="~/assets/admin/assets/img/favicon/favicon.ico" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
          rel="stylesheet" />

    <!-- Icons. Uncomment required icon fonts -->
    <link rel="stylesheet" href="~/assets/admin/assets/vendor/fonts/boxicons.css" />

    <!-- Core CSS -->
    <link rel="stylesheet" href="~/assets/admin/assets/vendor/css/core.css" class="template-customizer-core-css" />
    <link rel="stylesheet" href="~/assets/admin/assets/vendor/css/theme-default.css" class="template-customizer-theme-css" />
    <link rel="stylesheet" href="~/assets/admin/assets/css/demo.css" />


    <!-- Vendors CSS -->
    <link rel="stylesheet" href="~/assets/admin/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css" />

    <link rel="stylesheet" href="~/assets/admin/assets/vendor/libs/apex-charts/apex-charts.css" />

    <!-- Page CSS -->
    <!-- Helpers -->
    <script src="~/assets/admin/assets/vendor/js/helpers.js"></script>

    <!--! Template customizer & Theme config files MUST be included after core stylesheets and helpers.js in the <head> section -->
    <!--? Config:  Mandatory theme config file contain global vars & default theme options, Set your preferred theme option in this file.  -->
    <script src="~/assets/admin/assets/js/config.js"></script>
    <!-- CKEditor -->
    <script type="text/javascript" src="~/assets/ckeditor/ckeditor.js"></script>
</head>

<body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <!-- Menu -->
            <aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">
                <div class="app-brand demo">
                    <a href="/" class="app-brand-link">
                        <span class="app-brand-logo demo">
                            <img src="/logo.png" width="100"/>  
                        </span>
                        <span class="app-brand-text demo menu-text fw-bolder ms-2" style="text-transform: none;">@Localizer["project_name"]</span>
                    </a>

                    <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto d-block d-xl-none">
                        <i class="bx bx-chevron-left bx-sm align-middle"></i>
                    </a>
                </div>

                <div class="menu-inner-shadow"></div>

                <ul class="menu-inner py-1">
                    <!-- Dashboard -->
                    <li class="menu-item active">
                        <a href="/admin" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-home-circle"></i>
                            <div data-i18n="Analytics">@Localizer["dashboard"]</div>
                        </a>
                    </li>

                    <!--  User -->
                    <li class="menu-header small text-uppercase">
                        <span class="menu-header-text">@Localizer["all_user"]</span>
                    </li>

                    <li class="menu-item">
                        <a href="javascript:void(0);" class="menu-link menu-toggle">
                            <i class='menu-icon tf-icons bx bx-user-circle'></i>
                            <div data-i18n="Employers Settings">@Localizer["list_account"]</div>
                        </a>
                        <ul class="menu-sub ">                            
                            <li class="menu-item">
                                <a href="/admin/list-employer" class="menu-link">
                                    <div data-i18n="Employers">@Localizer["all_employers"]</div>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a href="/admin/list-user" class="menu-link">
                                    <div data-i18n="Users">@Localizer["all_users"]</div>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <!--  Employer -->
                    <li class="menu-header small text-uppercase">
                        <span class="menu-header-text">@Localizer["employers_management"]</span>
                    </li>
                    <!-- Applicant Setting-->
                    <li class="menu-item">
                        <a href="javascript:void(0);" class="menu-link menu-toggle">
                            <i class='menu-icon tf-icons bx bx-user-circle'></i>
                            <div data-i18n="Employers Settings">@Localizer["employers_settings"]</div>
                        </a>
                        <ul class="menu-sub ">
                            <li class="menu-item ">
                                <a href="/admin/apply-employer/3" class="menu-link">
                                    <div data-i18n="Employers">@Localizer["all_employers"]</div>
                                </a>
                            </li>
                            <li class="menu-item ">
                                <a href="/admin/apply-employer/1" class="menu-link">
                                    <div data-i18n="Employers">@Localizer["waiting_employers"]</div>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a href="/admin/apply-employer/2" class="menu-link">
                                    <div data-i18n="Employers">@Localizer["accepted_employers"]</div>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a href="/admin/apply-employer/0" class="menu-link">
                                    <div data-i18n="Employers">@Localizer["denied_employers"]</div>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <!-- Roles -->
                    <li class="menu-header small text-uppercase">
                        <span class="menu-header-text">@Localizer["roles"]</span>
                    </li>

                    <!-- Roles Setting -->
                    <li class="menu-item">
                        <a href="javascript:void(0);" class="menu-link menu-toggle">
                            <i class='menu-icon tf-icons bx bx-wrench'></i>
                            <div data-i18n="Account Settings">@Localizer["roles_settings"]</div>
                        </a>
                        <ul class="menu-sub">
                            <li class="menu-item">
                                <a class="menu-link" href="/admin/auth/list-roles">
                                    <div data-i18n="Account">@Localizer["roles_management"]</div>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a class="menu-link" href="/admin/users">
                                    <div data-i18n="Notifications">@Localizer["set_role_for_user"]</div>
                                </a>
                            </li>

                        </ul>
                    </li>

                    <!-- Contents -->
                    <li class="menu-header small text-uppercase"><span class="menu-header-text">@Localizer["management"]</span></li>
                    <li class="menu-item">
                        <a href="/admin/category" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-table"></i>
                            <div data-i18n="Tables">@Localizer["categories"]</div>
                        </a>
                    </li>

                    <li class="menu-item">
                        <a href="/admin/province" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-table"></i>
                            <div data-i18n="Tables">@Localizer["provinces"]</div>
                        </a>
                    </li>

                    <li class="menu-item">
                        <a href="/admin/skill" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-table"></i>
                            <div data-i18n="Tables">@Localizer["skills"]</div>
                        </a>
                    </li>

                    <li class="menu-item">
                        <a href="/admin/title" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-table"></i>
                            <div data-i18n="Tables">@Localizer["titles"]</div>
                        </a>
                    </li>

                    <li class="menu-item">
                        <a href="/admin/culture" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-table"></i>
                            <div data-i18n="Tables">@Localizer["cultures"]</div>
                        </a>
                    </li>

                    <li class="menu-item">
                        <a href="/admin/resource" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-table"></i>
                            <div data-i18n="Tables">@Localizer["resources"]</div>
                        </a>
                    </li>
                </ul>
            </aside>
            <!-- / Menu -->
            <!-- Layout container -->
            <div class="layout-page">
                
                <!--NavBar-->
                <partial name="_NavBarPartial.cshtml" />

                <!-- Content wrapper -->
                <div class="content-wrapper">
                    <br />
                    <!-- Start RenderBody -->
                    @RenderBody()
                    <!-- End RenderBody -->

                    <!-- Footer -->
                    <footer class="content-footer footer bg-footer-theme">
                        <div class="container-xxl d-flex flex-wrap justify-content-between py-2 flex-md-row flex-column">
                            <div class="mb-2 mb-md-0">
                                @Localizer["footer_text"]
                            </div>
                        </div>
                    </footer>
                    <!-- / Footer -->

                    <div class="content-backdrop fade"></div>
                </div>
                <!-- Content wrapper -->

            </div>
            <!-- / Layout page -->
        </div>

        <!-- Overlay -->
        <div class="layout-overlay layout-menu-toggle"></div>
    </div>
    <!-- / Layout wrapper -->

    <!-- Core JS -->
    <!-- build:js assets/vendor/js/core.js -->
    <script src="~/assets/admin/assets/vendor/libs/jquery/jquery.js"></script>
    <script src="~/assets/admin/assets/vendor/libs/popper/popper.js"></script>
    <script src="~/assets/admin/assets/vendor/js/bootstrap.js"></script>
    <script src="~/assets/admin/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>

    <script src="~/assets/admin/assets/vendor/js/menu.js"></script>
    <!-- endbuild -->
    <!-- Vendors JS -->
    <script src="~/assets/admin/assets/vendor/libs/apex-charts/apexcharts.js"></script>

    <!-- Main JS -->
    <script src="~/assets/admin/assets/js/main.js"></script>

    <!-- Page JS -->
    <script src="~/assets/admin/assets/js/dashboards-analytics.js"></script>

    <!-- Popup -->
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.10.1/dist/sweetalert2.all.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

    <!-- jQuery & Bootstrap-->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.6.0/js/bootstrap.min.js"></script>

    <!-- Place this tag in your head or just before your close body tag. -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    @await RenderSectionAsync("Scripts", required:false)
</body>
</html>
