@model AdrasJRS.Data.Entities.Category

@{
    ViewData["Title"] = Localizer["update_category"];
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title text-center">@Localizer["form_update_category"]</h4>
                    <br />
                    <div class="row">
                        <div class="col-md-8 mx-auto">
                            <form asp-action="Update" enctype="multipart/form-data" id="form">
                                <div class="form-group" style="margin-bottom: 15px">
                                    <label asp-for="Name" class="form-label">@Localizer["name"]</label><span
                                        class="text-danger">*</span>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group" style="margin-bottom: 15px">
                                    <label asp-for="Description"
                                        class="form-label">@Localizer["description"]</label><span
                                        class="text-danger">*</span>
                                    <input asp-for="Description" class="form-control" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="form-group text-center" style="margin-bottom: 15px">
                                    <input style="background-color:forestgreen" type="button" onclick="onUpdate()"
                                        value="@Localizer["update"]" class="btn btn-primary" />
                                </div>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="text-center">
                                    <a style="background-color:gray" class="btn btn-primary"
                                        href="/addrass_job_system/admin/category">@Localizer["back_to_list"]</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function onUpdate() {
            Swal.fire({
                title: '@Localizer["update_this_category"]',
                text: "@Localizer["are_you_sure_to_update_category"]",
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: '@Localizer["confirm"]'
            }).then((result) => {
                if (result.isConfirmed) {
                    $("#form").submit();
                    Swal.fire(
                        '@Localizer["update"]',
                        '',
                        'success'
                    )
                }
            })
        }
    </script>
}
