@model AdrasJRS.Data.ViewModel.CreateRoleViewModel

@{
    ViewData["Title"] = @Localizer["add_new_role"];
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title text-center">@Localizer["form_crete_role"]</h4>
                    <div class="row">
                        <div class="col-md-8 mx-auto">
                            <form asp-action="CreateRole" method="post" id="form">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="RoleName" class="control-label">@Localizer["name"]</label><span
                                        class="text-danger">*</span>
                                    <input asp-for="RoleName" class="form-control" />
                                    <span asp-validation-for="RoleName" class="text-danger"></span>
                                </div>
                                <br />
                                <div class="form-group">
                                    <label asp-for="RoleDescription"
                                        class="control-label">@Localizer["description"]</label><span
                                        class="text-danger">*</span>
                                    <input asp-for="RoleDescription" class="form-control" />
                                    <span asp-validation-for="RoleDescription" class="text-danger"></span>
                                </div>
                                <br />
                                <div class="form-group text-center" style="margin-bottom: 15px">
                                    <input style="background-color:forestgreen" type="button" onclick="onCreate()"
                                        value="@Localizer["create"]" class="btn btn-primary" />
                                </div>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="text-center">
                                    <a style="background-color:gray" class="btn btn-primary"
                                        href="/addrass_job_system/admin/auth/list-roles">@Localizer["back_to_list"]</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function onCreate() {
            Swal.fire({
                title: '@Localizer["add_new_role"]',
                text: "@Localizer["are_you_sure_to_add_new_role"]",
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: '@Localizer["confirm"]'
            }).then((result) => {
                if (result.isConfirmed) {
                    $("#form").submit();
                    Swal.fire(
                        '@Localizer["success"]',
                        '',
                        'success'
                    )
                }
            })
        }
    </script>
}