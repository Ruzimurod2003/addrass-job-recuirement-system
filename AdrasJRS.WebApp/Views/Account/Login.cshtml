@model AdrasJRS.Data.ViewModel.LoginViewModel

@{
    Layout = "_LayoutAccount";
}

<!-- /Logo -->
<h4 class="mb-2">@Localizer["welcome_to_project"]</h4>
<p class="mb-4">@Localizer["please_sign_in_to_your_account_and_start_the_adventure"]</p>

<form asp-action="Login" asp-controller="Account" id="account" class="mb-3" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label">@Localizer["email"]</label><span class="text-danger">*</span>
        <input asp-for="Email"
               type="text"
               class="form-control"
               autocomplete="username"
               aria-required="true"
               placeholder="Enter your email"
               autofocus />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3 form-password-toggle">
        @*<div class="d-flex justify-content-between">
            <label asp-for="Password" class="form-label"></label>
            <a href="#">
                <small>Forgot Password?</small>
            </a>
        </div>*@
            <label asp-for="Password" class="form-label">@Localizer["password"]</label><span class="text-danger">*</span>
            <div class="input-group input-group-merge">
                <input asp-for="Password"
                       type="password"
                       class="form-control"
                       autocomplete="new-password"
                       placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                       aria-required="true" />
                <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
            </div>
    </div>
    <div class="mb-3">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="RememberMe" />
            <label class="form-check-label" asp-for="RememberMe">@Localizer["remember_me"]</label>
        </div>
    </div>
    <div class="mb-3">
        <button id="login-submit" class="btn btn-primary d-grid w-100" type="submit">@Localizer["sign_in"]</button>
    </div>
</form>

<p class="text-center">
    <span>@Localizer["new_on_our_platform"]</span>
    <a href="/register">
        <span>@Localizer["create_an_account"]</span>
    </a>
</p>

<a href="/employer/login"
   class="btn btn-primary d-grid w-100" style="position:center">@Localizer["sign_in_for_employer"]</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    @if (ViewBag.PasswordChanged != null && (bool)ViewBag.PasswordChanged)
    {
        <script>
            Swal.fire({
                title: '@Localizer["password_changed"]',
                text: '@Localizer["your_password_has_been_changed_successfully_please_sign_in_again"]',
                icon: 'success',
                confirmButtonText: '@Localizer["OK"]'
            });
        </script>        
    }
}